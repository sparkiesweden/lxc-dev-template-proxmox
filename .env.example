# LXC Development Template Environment Configuration
# Copy this file to .env and customize for your environment

# Proxmox Configuration
PVE_NODE="pve"                    # Proxmox node name
PVE_STORAGE="local-lvm"             # Default storage for containers
PVE_BRIDGE="vmbr0"                 # Network bridge

# Template Configuration
TEMPLATE_ID="9000"                  # Template VMID
TEMPLATE_NAME="dev-template"         # Template name
TEMPLATE_CORES="8"                  # CPU cores for template
TEMPLATE_MEMORY="8192"              # Memory in MB for template
TEMPLATE_DISK="32"                   # Disk size in GB for template

# Container Configuration
DEFAULT_CORES="4"                   # Default CPU cores for new containers
DEFAULT_MEMORY="4096"                # Default memory in MB for new containers
DEFAULT_SWAP="2048"                  # Default swap in MB for new containers
DEFAULT_DISK="16"                    # Default disk size in GB for new containers

# User Configuration
DEV_USER="developer"                 # Development username
DEV_PASSWORD="devpass123"            # Default password (CHANGE THIS!)
DEV_SHELL="/bin/bash"                # Default shell
DEV_GROUPS="sudo,docker"              # User groups

# Network Configuration
NETWORK_MODE="dhcp"                  # dhcp or static
STATIC_IP_PREFIX="192.168.1"         # For static IP assignment
NETWORK_GATEWAY="192.168.1.1"       # Default gateway
NETWORK_DNS="8.8.8.8,8.8.4.4"     # DNS servers

# Backup Configuration
BACKUP_ENABLED="true"                # Enable automatic backups
BACKUP_STORAGE="local-lvm"            # Backup storage location
BACKUP_COMPRESSION="zstd"            # Backup compression method
BACKUP_SCHEDULE="daily"              # Backup schedule (daily, weekly, monthly)
BACKUP_RETENTION="7"                 # Number of backups to keep

# Development Tools Configuration
NODE_VERSION="20"                    # Node.js version
INSTALL_DOCKER="true"                # Install Docker
INSTALL_PYTHON="true"                # Install Python
INSTALL_ZSH="true"                   # Install Zsh
INSTALL_GH_CLI="true"                # Install GitHub CLI
INSTALL_OPENCODE="true"              # Install OpenCode

# Security Configuration
ENABLE_SSH_KEY_AUTH="true"           # Enable SSH key authentication
SSH_KEY_PATH="~/.ssh/id_rsa.pub"    # Path to SSH public key
CHANGE_DEFAULT_PASSWORD="true"        # Force password change on first login
ENABLE_FIREWALL="false"              # Enable container firewall

# Performance Configuration
CPU_UNITS="1024"                    # CPU weight
CPU_LIMIT="0"                       # CPU limit (0 = unlimited)
IO_LIMIT="0"                        # I/O limit (0 = unlimited)
MEMORY_SWAP="true"                   # Enable memory swap

# Monitoring Configuration
ENABLE_MONITORING="false"             # Enable resource monitoring
MONITORING_INTERVAL="60"              # Monitoring interval in seconds
LOG_RETENTION="30"                   # Log retention in days

# Customization
CUSTOM_PACKAGES=""                    # Additional packages to install
CUSTOM_SCRIPTS_PATH=""                # Path to custom setup scripts
POST_CREATE_HOOKS=""                 # Scripts to run after container creation

# OpenCode Configuration
OPENCODE_PROVIDERS="anthropic,openai" # Default providers to configure
OPENCODE_MODEL="anthropic/claude-3-5-sonnet-20241022"  # Default model
OPENCODE_AUTO_SHARE="false"          # Auto-share sessions
OPENCODE_THEME="default"             # TUI theme

# Docker Configuration
DOCKER_REGISTRY=""                     # Custom Docker registry
DOCKER_MIRROR=""                      # Docker registry mirror
DOCKER_STORAGE_DRIVER="overlay2"       # Docker storage driver
DOCKER_LOG_DRIVER="json-file"         # Docker log driver

# Project Templates
PROJECT_TEMPLATES_PATH="./project-templates"  # Path to project templates
DEFAULT_PROJECT_TEMPLATE="web"         # Default project template